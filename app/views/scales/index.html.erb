<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Scales</h1>
    <%= link_to "New Scale", new_scale_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-lg" %>
  </div>

  <div class="bg-white shadow overflow-hidden rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Value</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @scales.each do |scale| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800"><%= scale.name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= scale.value %></td>
            <td class="px-6 py-4 text-sm text-gray-600"><%= truncate(scale.description, length: 50) %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex space-x-2">
                <%= link_to "View", scale, class: "text-blue-600 hover:text-blue-900" %>
                <%= link_to "Edit", edit_scale_path(scale), class: "text-indigo-600 hover:text-indigo-900" %>
                <%= button_to "Delete", scale, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "text-red-600 hover:text-red-900" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>