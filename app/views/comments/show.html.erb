<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-6">
      <%= link_to "← Back to Comments", comments_path, class: "text-blue-600 hover:text-blue-800" %>
    </div>
    
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h1 class="text-xl font-medium text-gray-900">Comment Details</h1>
      </div>
      
      <div class="border-t border-gray-200">
        <dl>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Comment</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @comment.value %></dd>
          </div>
          
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Score</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2">Score #<%= @comment.score_id %></dd>
          </div>
          
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">User</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @comment.user.email_address rescue "Unknown User" %></dd>
          </div>
          
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Created At</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2"><%= @comment.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </div>
        </dl>
      </div>
    </div>

    <div class="mt-6 flex space-x-3">
      <%= link_to "Edit", edit_comment_path(@comment), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none" %>
      <%= button_to "Delete", @comment, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none" %>
    </div>
  </div>
</div>